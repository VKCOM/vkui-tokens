{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "esModuleInterop": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "lib": ["ES6", "DOM", "ES2017"],
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["dist/**/*.ts"]
}
